<style>
  ..section-section .section-container {
    max-width: 1440px;
    margin: 0 auto;
    box-sizing: border-box;
  }

  .collaborate-section {
    color: #000;
    font-family: "Minion Pro";
    font-size: 80px;
    font-style: normal;
    font-weight: 700;
    line-height: 160%;
    /* 128px */
    text-transform: capitalize;
  }

  /* Collaborate section style */
  .collaborate-section {
    padding: 100px 150px;
  }

  .collaborate-content {
    margin-top: 64px;
    display: flex;
    gap: 64px;
  }

  .collaborate-image {
    max-width: 480px;
    max-height: 441px;
    min-width: 480px;
    min-height: 441px;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collaborate-content-text {
    color: rgba(0, 0, 0, 0.60);
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  /* Responsive adjustments */
  @media (max-width: 1200px) {
    .collaborate-section {
      padding: 80px 100px;
    }

    .collaborate-content {
      gap: 40px;
    }

    .collaborate-image {
      max-width: 400px;
      max-height: 368px;
      min-width: 400px;
      min-height: 368px;
    }
  }

  @media (max-width: 992px) {
    .collaborate-section {
      padding: 60px 50px;
    }

    .collaborate-section {
      font-size: 48px;
    }

    .collaborate-content {
      flex-direction: column;
      gap: 30px;
    }

    .collaborate-image {
      max-width: 100%;
      max-height: none;
      min-width: 100%;
      min-height: auto;
      aspect-ratio: 16 / 9;
    }
  }

  @media (max-width: 768px) {
    .collaborate-section {
      padding: 50px 30px;
    }

    .collaborate-section {
      font-size: 48px;
    }

    .collaborate-content {
      margin-top: 40px;
    }
  }

  @media (max-width: 576px) {
    .collaborate-section {
      padding: 40px 20px;
    }

    .collaborate-section {
      font-size: 42px;
    }

    .collaborate-content-text {
      font-size: 13px;
    }
  }
</style>
<section class="collaborate-section">
  <div class="section-container collaborate-container">
    <div>
      <h1 class="collaborate-collaborate-section">
        {{ section.settings.title_part1 }}
        <span style="color: {{ section.settings.colored_text_color }}; font-style: italic;">
          {{ section.settings.title_part2 }}
        </span>
      </h1>
    </div>

    <div class="collaborate-content">
      <div>
        {% if section.settings.collaborate_image %}
          <img
            class="collaborate-image"
            src="{{ section.settings.collaborate_image | img_url: 'master' }}"
            alt="{{ section.settings.image_alt | escape }}"
            loading="lazy">
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>

      <div class="collaborate-content-text">
        {% for block in section.blocks %}
          <p>{{ block.settings.text }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Collaborate Section",
    "settings": [
      {
        "type": "header",
        "content": "Heading Settings"
      },
      {
        "type": "text",
        "id": "title_part1",
        "label": "Title Part 1",
        "default": "We Collaborate"
      },
      {
        "type": "text",
        "id": "title_part2",
        "label": "Title Part 2 (Colored)",
        "default": "with the Best"
      },
      {
        "type": "color",
        "id": "colored_text_color",
        "label": "Colored Text Color",
        "default": "#6CA082"
      }, {
        "type": "image_picker",
        "id": "collaborate_image",
        "label": "Collaborate Image"
      }, {
        "type": "text",
        "id": "image_alt",
        "label": "Image Alt Text",
        "default": "Collaboration illustration"
      }
    ],
    "blocks": [
      {
        "type": "paragraph",
        "name": "Text Paragraph",
        "settings": [
          {
            "type": "textarea",
            "id": "text",
            "label": "Paragraph Text",
            "default": "Enter your paragraph text here..."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collaborate Section",
        "category": "Custom Content",
        "blocks": [
          {
            "type": "paragraph",
            "settings": {
              "text": "At Ivy and Kareem, our philosophy is rooted in the belief that exceptional design is a result of meaningful collaboration. We understand that transforming a space into something extraordinary takes more than just creativity — it requires trust, precision, and shared values."
            }
          }, {
            "type": "paragraph",
            "settings": {
              "text": "That's why we've cultivated relationships with a carefully curated network of industry-leading brands, artisans, and manufacturers. These partnerships go beyond transactional — they are built on mutual respect and a shared dedication to quality and innovation."
            }
          }, {
            "type": "paragraph",
            "settings": {
              "text": "Together, we deliver more than just products — we deliver experiences. When clients choose Ivy and Kareem, they're not just hiring a team — they're gaining access to a circle of trusted experts who help bring their dreams to life with care, sophistication, and integrity."
            }
          }
        ]
      }
    ]
  }
{% endschema %}