<link
  rel="preload"
  href="{{ 'Left_Click.mp4' | asset_url }}"
  as="video">
<link
  rel="preload"
  href="{{ 'Right_Click.mp4' | asset_url }}"
  as="video">

<style>
  .craft-kitchen {
    padding: 60px 48px;
    max-width: 1440px;
    width: 100%;
    margin: 0 auto;
  }

  .craft-kitchen h1 {
    color: #000;
    text-align: center;
    font-size: 80px;
    font-style: normal;
    font-weight: 700;
    line-height: 160%;
    text-transform: capitalize;
  }

  .craft-kitchen h1 span {
    font-style: italic;
    color: #5f8a6b;
  }

  .image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .main-image {
    max-width: 600px;
    width: 100%;
    height: auto;
    z-index: 1;
  }
  video {
    width: 900px;
    height: auto;
    z-index: 1;
  }
  .left-button,
  .right-button {
    /* position: absolute; */
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28px;
    cursor: pointer;
    color: #000;
    /* padding: 0 20px; */
    width: 200px !important;

  }

  .left-button {

    transform: translate(99%, 95%);
    z-index: 10;
  }

  .right-button {
    transform: translate(-99%, 95%);
    z-index: 10;

  }
  .left-button:hover,
  .right-button:hover {
    font-style: italic;
    color: #5f8a6b;

  }


  .circle {
    border: 1px solid #000;
    border-radius: 50%;
    width: 34px;
    height: 34px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .left-button:hover .circle,
  .right-button:hover .circle {
    background-color: #5f8a6b;
    border: 1px solid #5f8a6b;
  }

  .left-button:hover .plus,
  .right-button:hover .plus {
    color: white;

  }

  .mobile-screen-btn {
    display: none;
  }
  @media(max-width: 1024px) {
    #left-video,
    #right-video {
      max-width: 600px;
    }
    .left-button {

      transform: translate(70%, 80%);
      z-index: 10;
    }

    .right-button {
      transform: translate(-70%, 80%);
      z-index: 10;

    }
  }
  @media (max-width: 768px) {
    .left-button,
    .right-button {
      display: none;
    }
    .craft-kitchen h2 {
      font-size: 36px;
    }
    .image-container {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      /* gap: 25px; */
      /* position: relative; */
    }
    #left-video,
    #right-video {
      max-width: 500px;
    }
    .mobile-screen-btn {
      display: flex;
    }
    .mbl-left-button,
    .mbl-right-button {
      /* position: absolute; */
      display: flex;
      /* flex-direction: column; */

      justify-content: center;
      align-items: center;
      gap: 8px;
      font-size: 18px;
      cursor: pointer;
      color: #000;
      /* padding: 0 20px; */
      width: 200px;

    }

    .mbl-circle {
      border: 1px solid #000;
      border-radius: 50%;
      width: 22px;
      height: 22px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }

    .mbl-left-button:hover .mbl-circle,
    .mbl-right-button:hover .circle {
      background-color: #5f8a6b;
      border: 1px solid #5f8a6b;
    }

    .mbl-left-button:hover .mbl-plus,
    .mbl-right-button:hover .plus {
      color: white;

    }
    .mbl-left-button:hover,
    .mbl-right-button:hover {
      font-style: italic;
      color: #5f8a6b;

    }

    .craft-kitchen-heading {
      font-size: 42px;
      font-weight: 700;

    }
  }
  @media (max-width: 480px) {
    .craft-kitchen {
      padding: 24px 0;
    }
    .craft-kitchen h1 {
      font-size: 42px;
      line-height: 120%;
    }
    .left-button,
    .right-button {
      width: 100%;
      font-size: 18px;
    }
    .mbl-left-button,
    .mbl-right-button {
      width: 150px;
      text-wrap: nowrap;
    }
    .mobile-screen-btn {
      justify-content: space-between;
    }

  }
</style>

<div class="craft-kitchen">
  <h1>{{ section.settings.section_title1 }}
    <span>{{ section.settings.section_title2 }}</span>
  </h1>
  <div class="image-container">
    <a href="{{section.settings.left_button_url}}" class="left-button">
      <div class="circle">
        <span class="plus">+</span>
      </div>
      <p>{{ section.settings.explore_text }}</p>
    </a>
    {% if section.settings.left_video %}
      <video
        class="left-video"
        style="display: none"
        muted
        playsinline>
        <source src="{{ section.settings.left_video | video_url }}" type="video/mp4">
      </video>
    {% else %}
      <video
        class="left-video"
        style="display: none"
        muted
        playsinline>
        <source src="{{ 'Left_Click.mp4' |  asset_url }}" type="video/mp4">
      </video>
    {% endif %}
    {% if section.settings.right_video %}
      <video
        class="right-video"
        autoplay
        muted
        playsinline
        loop>
        <source src="{{ section.settings.right_video | video_url }}" type="video/mp4">
      </video>
    {% else %}
      <video
        class="right-video"
        autoplay
        muted
        playsinline
        loop>
        <source src="{{ 'Right_Click.mp4' |  asset_url }}" type="video/mp4">
      </video>
    {% endif %}
    <a href="{{section.settings.right_button_url}}" class="right-button">
      <div class="circle">
        <span class="plus">+</span>
      </div>
      <p>{{ section.settings.shop_text }}</p>
    </a>

    <div class="mobile-screen-btn">
      <a href="{{section.settings.left_button_url}}" class="mbl-left-button">
        <div class="mbl-circle">
          <span class="mbl-plus">+</span>
        </div>
        <p>{{ section.settings.explore_text }}</p>
      </a>
      <a href="{{section.settings.right_button_url}}" class="mbl-right-button">
        <div class="mbl-circle">
          <span class="mbl-plus">+</span>
        </div>
        <p>{{ section.settings.shop_text }}</p>
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  const kitchenSections = document.querySelectorAll('.craft-kitchen');
  
  kitchenSections.forEach(section => {
    // Elements
    const leftVideo = section.querySelector('.left-video');
    const rightVideo = section.querySelector('.right-video');
    const leftButton = section.querySelector('.left-button');
    const rightButton = section.querySelector('.right-button');
    const mobileLeft = section.querySelector('.mbl-left-button');
    const mobileRight = section.querySelector('.mbl-right-button');
  
    // Video control functions
    const showLeftVideo = () => {
      if (!leftVideo) return;
      leftVideo.style.display = "block";
      rightVideo.style.display = "none";
      rightVideo.pause();
      leftVideo.play().catch(e => console.log("Video play error:", e));
    };
  
    const showRightVideo = () => {
      if (!rightVideo) return;
      rightVideo.style.display = "block";
      leftVideo.style.display = "none";
      leftVideo.pause();
      rightVideo.play().catch(e => console.log("Video play error:", e));
    };
  
    // Event handlers
    const setupEvents = () => {
      // Desktop
      if (leftButton) leftButton.addEventListener('mouseenter', showLeftVideo);
      if (rightButton) rightButton.addEventListener('mouseenter', showRightVideo);
      
      // Mobile
      if (mobileLeft) mobileLeft.addEventListener('mouseenter', showLeftVideo);
      if (mobileRight) mobileRight.addEventListener('mouseenter', showRightVideo);
      
      // Reset on mouse leave (desktop)
      section.addEventListener('mouseleave', () => {
        if (window.innerWidth > 768) {
          showRightVideo();
        }
      });
    };
  
    // Initialize
    setupEvents();
    
    // Handle responsive changes
    window.addEventListener('resize', () => {
      // Reset to default state on resize
      if (window.innerWidth <= 768) {
        showRightVideo();
      }
    });
  });
  });
</script>

