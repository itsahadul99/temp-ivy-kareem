<style>

  .how-financing-work-section-container {
    max-width: 1440px;
    margin: 0 auto;
  }
  .how-financing-section-title {
    color: #000;
    font-size: 64px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }
  .how-financing-work-section {
    background-color: rgba(157, 184, 168, 0.14);
    padding: 100px 150px;
  }

  .how-financing-work-card-container {
    display: flex;
    gap: 16px;
    margin-top: 64px;
    width: 100%;
  }

  .how-financing-work-card {
    display: flex;
    padding: 24px;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    border: 1px solid #BDA87F;
    width: 370px;
    min-height: 217px;
  }

  .how-financing-work-card-title {
    color: #252531;
    font-size: 34px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
  }

  .how-financing-work-card-des {
    color: rgba(0, 0, 0, 0.60);
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 32px;
  }

  /* Style for Laptop */
  @media (max-width: 1024px) {

    .how-financing-work-section {
      padding: 70px 100px;
    }
  }

  /* Style for tablet */

  @media (max-width: 768px) {

    /* How financing work  */
    .how-financing-work-section {
      padding: 40px 32px;
    }

    .how-financing-section-title {
      font-size: 48px;
      line-height: 100%;
    }

    .how-financing-work-card {
      width: 234px;
      height: auto;
    }

    .how-financing-work-card-title {
      font-size: 24px;
    }

    .how-financing-work-card-des {
      font-size: 16px;
      line-height: 24px;
    }
  }

  /* Style for mobile/small device */
  @media(max-width: 431px) {

    /* How financing work  */
    .how-financing-work-section {
      padding: 32px 20px;
    }

    .how-financing-section-title {
      font-size: 42px;
      line-height: 100%;
    }

    .how-financing-work-card-container {
      flex-direction: column;
    }

    .how-financing-work-card {
      width: 100%;

    }

    .how-financing-work-card-des {
      font-size: 18px;
      line-height: 24px;
    }
  }
</style>
