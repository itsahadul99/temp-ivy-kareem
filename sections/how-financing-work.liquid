            </svg>
          {% endif %}
          <h3 class="how-financing-work-card-title">{{ block.settings.title }}</h3>
          <p class="how-financing-work-card-des">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "How Financing Works",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "How Financing"
      }, {
        "type": "text",
        "id": "highlighted_text",
        "label": "Highlighted Text",
        "default": "Works"
      }
    ],
    "blocks": [
      {
        "type": "step",
        "name": "Financing Step",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon",
            "info": "48x48px recommended"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Apply Online"
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "Each partner has a long-standing reputation for excellence."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "How Financing Works",
        "category": "Custom Content",
        "blocks": [
          {
            "type": "step",
            "settings": {
              "title": "Apply Online",
              "description": "Complete our simple online application in minutes."
            }
          }, {
            "type": "step",
            "settings": {
              "title": "Get Approved",
              "description": "Receive instant approval decision with no credit impact."
            }
          }, {
            "type": "step",
            "settings": {
              "title": "Checkout",
              "description": "Use your financing at checkout for immediate purchases."
            }
          }
        ]
      }
    ],
    "max_blocks": 6
  }
{% endschema %}