{% schema %}
  {
    "name": "Advanced Navbar",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Home Logo Image",
        "info": "Recommended size: 119x63px"
      },
      {
        "type": "image_picker",
        "id": "logo_for_other_pages",
        "label": "Logo Image for Other Pages",
        "info": "Recommended size: 119x63px"
      },
      {
        "type": "url",
        "id": "logo_link",
        "label": "Logo Link",
        "info": "URL to redirect when logo is clicked"
      },
      {
        "type": "header",
        "content": "Navigation Settings"
      }, {
        "type": "text",
        "id": "shop_button_text",
        "label": "Shop Button Text",
        "default": "Shop"
      }, {
        "type": "url",
        "id": "shop_button_link",
        "label": "Shop Button Link"
      }, {
        "type": "color",
        "id": "menu_text_color",
        "label": "Menu Text Color",
        "default": "#FFFFFF"
      }, {
        "type": "color",
        "id": "menu_hover_color",
        "label": "Menu Active Color",
        "default": "#6CA082"
      }
    ],
    "blocks": [
      {
        "type": "menu_item",
        "name": "Menu Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Menu Title",
            "default": "Home"
          }, {
            "type": "url",
            "id": "link",
            "label": "Menu Link"
          }, {
            "type": "checkbox",
            "id": "has_dropdown",
            "label": "Enable Dropdown Menu",
            "default": false
          }, {
            "type": "link_list",
            "id": "dropdown_menu",
            "label": "Dropdown Menu Links",
            "info": "Select a menu for dropdown items"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Advanced Navbar",
        "category": "Navigation"
      }
    ]
  }
{% endschema %}

<style>
  /* Base Styles */
  .navbar-container {
    z-index: 1000;
    transition: all 0.3s ease;
  }

  /* Active Menu State */
  .active-menu {
    color: {{ section.settings.menu_hover_color }}
     !important;
  }


  /* Dropdown Menu */
  .dropdown-menu {
    display: none;
    position: absolute;
    left: 0;
    min-width: 200px;
    background: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 50;
    border-radius: 0 0 4px 4px;
    padding: 0.5rem 0;
  }

  .has-dropdown:hover .dropdown-menu {
    display: block;
    animation: fadeIn 0.2s ease-out;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.5rem 1rem;
    color: #333;
    transition: all 0.2s ease;
  }

  .dropdown-menu a:hover {
    color: {{ section.settings.menu_hover_color }};
    background-color: #f9f9f9;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.95);
    z-index: 1000;
    padding-top: 80px;
    overflow-y: auto;
  }

  .mobile-menu.active {
    display: block;
  }

  .menu-close-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    color: white;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-dropdown {
    display: none;
    padding-left: 1rem;
  }

  .mobile-menu-item.has-dropdown.active .mobile-dropdown{
    display: block;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {

  .desk-nav, .shop-now-btn, .shop-now-home-btn  {
      display: none;
    }
    .dropdown-menu {
      position: static;
      display: none !important;
      box-shadow: none;
    }
    .mobile-menu-btn {
      display: block;
    }
  }

  @media (min-width: 769px) {
    .mobile-menu-btn{
      display: none;
    }
  }
  @media(max-width: 431px) {
    .desk-nav, .shop-now-btn {
      display: none;
    }
  }
</style>

