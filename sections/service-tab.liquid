<style>
  .kitchen_and_bath_section {
    padding: 0 150px 90px;
  }

  .kitchen_and_bath_container {
    max-width: 1440px;
    margin: 70px auto 0;
  }

  .tabs {
    display: flex;
    justify-content: space-between;
    gap: 3rem;
    border-bottom: 1px solid #ddd;
    margin-bottom: 71px;
    position: relative;
  }

  .tab {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 9px;
    cursor: pointer;
    padding: 0 0 46px;
    color: #252531;
    font-weight: 500;
    position: relative;
  }

  .tab.active {
    color: #6ca082;
    font-weight: 700;
  }
  .tab svg {
    fill: #252531;
  }
  .tab.active svg {
    fill: #6ca082;
  }

  .tab.active::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #007a42;
  }

  .tab-content {
    display: none;
    align-items: center;
    gap: 86px;
    margin: 0 auto;
  }

  .tab-content.active {
    display: flex;
  }

  .tab-content img {
    max-width: 456px;
    border-radius: 3px;
    object-fit: cover;
  }

  .tab-text > * + * {
    margin-top: 12px;
  }
  .tab-text h2 {
    color: #000;
    font-size: 64px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }
  .tab-text h2 > span {
    color: #6ca082;
    font-size: 64px;
    font-style: italic;
    font-weight: 700;
    line-height: normal;
  }

  .tab-text p {
    overflow: hidden;
    color: rgba(0, 0, 0, 0.6);
    font-family: Avenir LT Pro;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
  }

  .view-more {
    background: none;
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 0;
    border: none;
    color: #000;
    font-family: "Minion Pro";
    font-size: 28px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-transform: capitalize;
  }
  .view-more:hover {
    font-style: italic;
  }
  .view-more-btn svg {
    width: 15.7px;
    height: 15.7px;
    stroke: black;
  }
  .view-more:hover .view-more-btn svg {
    stroke: white;
  }
  @media (max-width: 768px) {
    .kitchen_and_bath_section {
      padding: 40px 32px;
    }

    .tabs {
      margin-bottom: 40px;
    }

    .tab-text > * + * {
      margin-top: 16px;
    }
    .tab-text h2 {
      font-size: 40px;
    }
    .tab-text h2 > span {
      font-size: 40px;
    }

    .tab-content {
      align-self: stretch;
      align-items: flex-start;
      gap: 40px;
    }
    .view-more {
      padding: 12px 0;
    }
    .tab-content img {
      max-width: 295px;
      max-height: 259px;
    }
  }

  @media (max-width: 426px) {
    .kitchen_and_bath_section {
      padding: 0 20px;
    }

    .tabs {
      margin-bottom: 40px;
    }
    .tab-content {
      align-items: start;
      flex-direction: column;
      gap: 16px;
    }

    .tab {
      gap: 14px;
      cursor: pointer;
      padding: 0 0 16px;
    }
    .tab > span {
      font-size: 14px;
    }

    .tab-text h2 {
      font-size: 32px;
    }

    .view-more {
      padding: 12px 0;
    }
    .tabs {
      margin-bottom: 24px;
    }
    .tab-content img {
      max-width: 100%;
      max-height: 400px;
    }
    .tab-text > * + * {
      margin-top: 16px;
    }
    .tab-text h2 {
      font-size: 32px;
    }
    .tab-text h2 > span {
      font-size: 32px;
    }
    .view-more {
      margin-top: 24px;
      padding: 0;
    }
    #tab-content-container{
      padding-bottom: 20px;
    }
  }
</style>

