{% comment %} 
    <div class="justify-items-center mb-[100px]">
      <div class="w-[1107px] h-[294px] flex gap-4 px-15 mt-[297px]">
        <!-- Image -->
        <div class="w-[539px] justify-items-center mr-[180px]">
        
          {% comment %} <img 
            src="{{ section.settings.hero_image | section.settings.hero_image | asset_url }}" 
