  <!-- Contact section -->
<section class="contact-section">
    <div class="contact-section-content connect-section-container">
      <div>
        <h1 class="section-title">
          <span style="color: {{ section.settings.title_part1_color }}; font-style: italic">
            {{ section.settings.section_title_part1 }}
          </span>
          {{ section.settings.section_title_part2 }}
        </h1>
        <p class="section-des">
          {{ section.settings.section_description }}
        </p>
      </div>
      <div class="contact-section-form">
        <div class="contact-section-left-wrapper">
          <div style="display: flex; align-items: flex-start; gap: 16px">
            {% if section.settings.location_icon %}
                <img width="40" height="40" src="{{ section.settings.location_icon |  image_url  }}" alt="locationIcon">
                {% else %}
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                viewBox="0 0 40 40"
                fill="none"
              >
                <path
                  d="M20.1873 3.33521C12.8235 3.23165 6.77008 9.11737 6.66663 16.4812C6.66663 25.5616 18.9404 36.0287 19.4628 36.4698C19.6128 36.5972 19.8032 36.667 20 36.6667C20.1967 36.667 20.3871 36.5972 20.5371 36.4698C21.0595 36.0287 33.3333 25.5616 33.3333 16.4812C33.2319 9.26325 27.4053 3.43663 20.1873 3.33521ZM20 34.7233C17.6399 32.6042 8.33329 23.7777 8.33329 16.4812C8.39219 10.0923 13.611 4.95651 20 5.00004C26.3889 4.95651 31.6078 10.0923 31.6666 16.4812C31.6666 23.7712 22.3583 32.6026 20 34.7233ZM20 11.6667C17.2385 11.6667 15 13.9053 15 16.6667C15 19.4281 17.2385 21.6667 20 21.6667C22.7602 21.6637 24.9969 19.4269 25 16.6667C25 13.9053 22.7614 11.6667 20 11.6667ZM20 20C18.159 20 16.6666 18.5076 16.6666 16.6667C16.6666 14.8258 18.159 13.3334 20 13.3334C21.84 13.3357 23.331 14.8267 23.3333 16.6667C23.3333 18.5076 21.8409 20 20 20Z"
                  fill="#6CA082"
                />
              </svg>
            {% endif %}
            <div>
              <h3>{{ section.settings.location_heading }}</h3>
              <p>{{ section.settings.location_address }}</p>
            </div>
          </div>
          <div class="map-container">
            <div id="map"></div>
          </div>
        </div>
      
      <form>
        <div class="form-content">
          <div style="display: flex; align-items: center; gap: 21px; align-self: stretch;">
            <input
              placeholder="First Name*"
              type="text"
              id="first-name"
              name="first-name"
              required
            />
            <input
              placeholder="Last Name*"
              type="text"
              id="last-name"
              name="last-name"
              required
            />
          </div>
          <input
            placeholder="Email*"
            type="email"
            id="email"
            name="email"
            required
          />
          <input
            placeholder="Phone Number*"
            type="tel"
            id="phone"
            name="phone"
            required
          />
          <select id="looking-for" name="looking-for">
            <option value="">What are you looking for?</option>
            <option value="support">Support</option>
            <option value="sales">Sales</option>
            <option value="other">Other</option>
          </select>
          <textarea
            placeholder="Your message..."
            id="message"
            name="message"
          ></textarea>
        </div>
        <button class="send-message-btn" type="submit">{{ section.settings.submit_button_text }}</button>
  
        <div class="chat-icon">
            {% if section.settings.chat_icon %}
          <img class="chat-icon-img" src="{{ section.settings.chat_icon | img_url }}" alt="Chat Icon">
          {% else %}
              <img class="chat-icon-img" src="{{ 'chat-icon.png' | asset_url }}" alt="Chat Icon" loading="lazy">
            {% endif %}
        </div>
      </form>
    </div>
  </section>
  {{ 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js' | script_tag }}
  <script>
    // Initialize the map
    var coordinates = "{{ section.settings.map_coordinates }}".split(',');
    var map = L.map("map").setView([parseFloat(coordinates[0]), parseFloat(coordinates[1])], {{ section.settings.map_zoom }});
    // Use a light-colored tile layer
    L.tileLayer(
      "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
      {
        attribution: '&copy; <a href="https://carto.com/">CARTO</a>',
        maxZoom: 19,
      }
    ).addTo(map);
  
    // Add a marker
    L.marker([parseFloat(coordinates[0]), parseFloat(coordinates[1])])
      .addTo(map)
      .bindPopup("{{ section.settings.location_address }}")
      .openPopup();
  </script>

