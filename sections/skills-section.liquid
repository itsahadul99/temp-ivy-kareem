          }
        },
        {
          "type": "skill",
          "settings": {
            "percent": "79",
            "skill_name": "Accessories & Decor",
            "card_height_desktop": 79,
            "card_height_mobile": 190
          }
        },
        {
          "type": "skill",
          "settings": {
            "percent": "89",
            "skill_name": "Design and Build",
            "card_height_desktop": 89,
            "card_height_mobile": 208
          }
        }
      ]
    }
  ]
}
{% endschema %}