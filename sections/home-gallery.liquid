<style>
  .section-container {
    max-width: 1440px;
    margin: 0 auto;
  }

  .gallery-section {
    padding: 60px 150px;
  }

  .gallery-section h2 {
    color: #000;
    font-size: 80px;
    font-style: italic;
    font-weight: 700;
    line-height: 160%;
    text-transform: capitalize;
    text-align: end;
  }

  .gallery-section h2 span {
    color: {{ section.settings.work_gallery }};
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 64px;
    margin-bottom: 40px;
  }

  .gallery-item {
    position: relative;
    width: 100%;
    height: 360px;
    border-radius: 5px;
    overflow: hidden;
  }

  .gallery-grid img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 5px;
    transition: transform 0.3s ease;
  }

  .gallery-grid .gallery-item:nth-child(1),
  .gallery-grid .gallery-item:nth-child(4) {
    grid-column: span 2;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    opacity: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: opacity 0.3s ease;
  }

  .overlay-text {
    color: #fff;
    font-size: 28px;
    line-height: 39px;
    text-align: center;
    padding: 40px 40px 20px;
  }

  .explore-wrapper {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 24.5px 0;
    cursor: pointer;
  }
  .explore-wrapper:hover {
    font-style: italic;
  }
  .explore-btn {
    width: 40px;
    height: 40px;
    color: white;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid white;
    background-color: transparent;
    transition: all 0.3s ease-in-out;
  }

  .explore-wrapper:hover .explore-btn {
    color: black;
    background-color: #fff;
  }

  .explore-text {
    color: white;
    font-size: 28px;
    font-family: 'Minion Pro'
    , serif;
  }

  .gallery-item:hover .overlay {
    opacity: 1;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  .see-more-item {
    position: relative;
    width: 100%;
    height: 360px;
    border-radius: 5px;
    overflow: hidden;
    background-color: #6b9b37;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .see-more-btn {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 24.5px 0;
    cursor: pointer;
    background: none;
    border: none;
  }

  .see-more-btn .explore-btn {
    width: 40px;
    height: 40px;
    color: white;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid white;
    background-color: transparent;
    transition: all 0.3s ease-in-out;
  }

  .see-more-btn:hover .explore-btn {
    color: black;
    background-color: #fff;
  }

  .see-more-btn .explore-text {
    color: white;
    font-size: 28px;
    font-family: 'Minion Pro'
    , serif;
  }

  /* Responsive Styles */
  @media (max-width: 1200px) {
    .gallery-section {
      padding: 60px 80px;
    }
  }

  @media (max-width: 1024px) {

    .gallery-item,
    .see-more-item {
      height: 300px;
    }
  }

  @media (max-width: 768px) {
    .gallery-section {
      padding: 40px 30px;
    }
    .gallery-section h2 {
      font-size: 48px;
    }
    /* .gallery-grid {
      grid-template-columns: 1fr;
    } */
    .gallery-item,
    .see-more-item {
      height: 250px;
    }
    /* .gallery-grid .gallery-item:nth-child(1),
    .gallery-grid .gallery-item:nth-child(4) {
      grid-column: span 1;
    } */
  }

  @media (max-width: 480px) {
    .gallery-section {
      padding: 30px 20px;
    }
    .gallery-section h2 {
      font-size: 36px;
    }
    .gallery-item,
    .see-more-item {
      height: 200px;
    }
    .overlay-text, .explore-text {
      font-size: 12px;
      line-height: 1.4;
    }
  }
</style>

<section class="gallery-section" style="background: rgba(157, 184, 168, 0.14);">
  <div class="section-container">
    <h2>{{ section.settings.section_title1 }}
      <span>{{ section.settings.section_title2 }}</span>
    </h2>
    <div class="gallery-grid">
      {% for block in section.blocks %}
        <div class="gallery-item">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}">
          {% else %}
            <img src="https://via.placeholder.com/400" alt="Placeholder">
          {% endif %}
          <div class="overlay">
            <div class="overlay-text">{{ block.settings.text | escape }}</div>
            <a href="{{ block.settings.button_url | escape }}" class="explore-wrapper">
              <button class="explore-btn">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="17"
                  viewBox="0 0 16 17"
                  fill="none">
                  <path d="M6.9165 9.58342H1.49984C0.901529 9.58342 0.416504 9.09839 0.416504 8.50008C0.416504 7.90177 0.901529 7.41675 1.49984 7.41675H6.9165V2.00008C6.9165 1.40177 7.40153 0.916748 7.99984 0.916748C8.59815 0.916748 9.08317 1.40177 9.08317 2.00008V7.41675H14.4998C15.0981 7.41675 15.5832 7.90177 15.5832 8.50008C15.5832 9.09839 15.0981 9.58342 14.4998 9.58342H9.08317V15.0001C9.08317 15.5984 8.59815 16.0834 7.99984 16.0834C7.40153 16.0834 6.9165 15.5984 6.9165 15.0001V9.58342Z" fill="currentColor" />
                </svg>
              </button>
              <p class="explore-text">{{ block.settings.button_text | escape }}</p>
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="mt-[40px] flex justify-center justify-items-center pb-6 mb-6 md:mb-0 md:pb-0">
      <a href="{{section.settings.see_more_url}}" class="flex  md:flex-col group hover:italic cursor-pointer ">
        <button class="
              w-[40px] h-[40px] md:ms-16 text-black rounded-full flex items-center justify-center border-black border-2
              transition-all duration-300 group-hover:text-white group-hover:bg-[#6CA082] group-hover:border-[#6CA082]
            ">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-[15.7px] h-[15.7px]">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </button>
        <p class="text-black text-[28px] transition-all duration-300 group-hover:text-[#6CA082]   ms-2 md:ms-0 md:mt-[14px]" style="font-family: 'Minion Pro'">
         {{ section.settings.see_more_text | escape }}
        </p>
      </a>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Gallery Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title1",
        "label": "Section Title",
        "default": "Our"
      },
       {
        "type": "text",
        "id": "section_title2",
        "label": "Section Title Color Part",
        "default": "Work Gallery"
      }, 
       {
        "type": "text",
        "id": "see_more_text",
        "label": "See More Button Text",
        "default": "Work Gallery"
      }, 
      {
        "type": "url",
        "id": "see_more_url",
        "label": "See More Button URL",
        "info": "Link for the See More button."
      },
      {
        "type":"color",
          "id":"work_gallery",
        "label":"Second title color",
        "default":"#6CA082"
      }
    ],
    "blocks": [
      {
        "type": "gallery_item",
        "name": "Gallery Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "text",
            "label": "Overlay Text",
            "default": "Gallery Item Description"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Explore Now"
          }, {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Home Gallery Section",
        "blocks": [
          {
            "type": "gallery_item",
            "settings": {
              "text": "Item 1",
              "button_text": "Explore Now"
            }
          }, {
            "type": "gallery_item",
            "settings": {
              "text": "Item 2",
              "button_text": "Explore Now"
            }
          }, {
            "type": "gallery_item",
            "settings": {
              "text": "Item 3",
              "button_text": "Explore Now"
            }
          }
        ]
      }
    ]
  }
{% endschema %}