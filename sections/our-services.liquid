<style>
  .service-section {
    margin-top: 51px;
  }

  .service-title-container h1 {
    color: #000;
    text-align: center;
    font-family: "Minion Pro";
    font-size: 42px;
    font-style: normal;
    font-weight: 700;
    line-height: 160%;
    text-transform: capitalize;
  }
  .service-title-container h1 span {
    font-style: italic;
    color: {{ section.settings.second_color | escape }};
  }

  @media (min-width: 768px) {
    .service-title-container h1 {
      font-size: 48px;
    }
  }

  /* Subsection Common Styles */
  .service-subsection {
    margin-top: 76px;
    display: grid;
    justify-items: center;
  }

  .service-subsection-container {
    max-width: 1440px;
    width: 100%;
    padding: 0 50px;
  }

  .service-subsection-content {
    display: flex;
    gap: 59px;
    align-items: flex-start;
  }

  .service-image {
    width: 100%;
    max-width: 481px;
  }

  .service-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Mobile Image */
  .service-mobile-image {
    width: 300px;
    margin: 0 auto;
  }

  .service-mobile-image img {
    width: 100%;
    margin-bottom: 40px;
  }

  /* Subsection Text */
  .service-text {
    width: 100%;
    margin-left: 30px;
    margin-bottom: 64px;
    padding: 0 16px;
  }

  .service-text-inner {
    display: flex;
    gap: 23px;
  }

  .service-number {
    width: 37px;
    height: 38px;
    font-family: 'Roboto'
    , sans-serif;
    font-size: 32px;
    font-weight: 600;
    line-height: 37.5px;
    color: {{ section.settings.second_color | escape }};
  }

  .service-subtitle {
    font-family: 'Minion Pro'
    , serif;
    font-weight: 700;
    font-size: 40px;
    line-height: 76.8px;
  }

  .service-description {
    font-family: 'Roboto'
    , sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 23.44px;
    opacity: 0.6;
    max-width: 240px;
  }

  .view-more {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 24.5px 0;
    height: 83px;
    cursor: pointer;
    transition: font-style 0.3s ease-in-out;
  }

  .view-more:hover {
    font-style: italic;
  }

  .view-more-btn {
    width: 40px;
    height: 40px;
    border: 2px solid black;
    border-radius: 100%;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease-in-out;
  }

  .view-more-btn svg {
    width: 15.7px;
    height: 15.7px;
    stroke: black;
  }

  .view-more:hover .view-more-btn {
    background: {{ section.settings.second_color | escape }};
    border-color: {{ section.settings.second_color | escape }};
  }

  .view-more:hover .view-more-btn svg {
    stroke: white;
  }

  .view-more-text {
    font-family: 'Minion Pro'
    , serif;
    font-size: 28px;
    color: black;
    transition: color 0.5s ease-in-out;
  }

  .view-more:hover .view-more-text {
    color: {{ section.settings.second_color | escape }};
  }
  .financing-container {
    display: none;
  }
  /* Responsive Styles */
  @media (max-width: 767px) {
    .service-subsection {
      margin-top: 0;
    }

    .service-text {
      margin-left: 0;
      margin-bottom: 0;
    }

    .service-subtitle {
      font-size: 40px;
    }

    .service-image {
      display: none;
    }

    .service-subsection-container {
      padding: 0;
    }

  }

  @media (min-width: 768px) {
    .service-mobile-image {
      display: none;
    }

    .service-text {
      margin-left: 0;
    }

    .service-subtitle {
      font-size: 60px;
    }

    .service-description {
      max-width: 440px;
    }
    /* Financing Circle */
    .financing-container {
      margin-top: 16px;
      width: 200px;
      height: 200px;
      border: 2px solid #979595;
      border-radius: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: border-color 0.5s ease-in-out;
    }

    .financing-container:hover {
      border-color: {{ section.settings.second_color | escape }};
    }

    .financing-circle {
      width: 160px;
      height: 160px;
      border: 2px dashed #979595;
      border-radius: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      transform: rotate(-30deg);
      transition: all 0.5s ease-in-out;
    }

    .financing-container:hover .financing-circle {
      border-color: {{ section.settings.second_color | escape }};
      transform: rotate(0deg);
    }

    .financing-inner-circle {
      width: 120px;
      height: 120px;
      border: 2px solid #979595;
      border-radius: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      transform: rotate(-30deg);
      transition: all 0.5s ease-in-out;
      padding: 5px;
    }

    .financing-container:hover .financing-inner-circle {
      border-color: {{ section.settings.second_color | escape }};
      transform: rotate(0deg);
    }

    .financing-text {
      color: #6CA082;
      text-align: center;
      font-family: "Minion Pro";
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 22px;
      transform: rotate(30deg);
      transition: all 0.5s ease-in-out;
    }

    .financing-container:hover .financing-text {
      color: {{ section.settings.second_color | escape }};
      transform: rotate(0deg);
    }
  }

  @media (min-width: 1024px) {
    .service-subsection-content {
      padding: 0 14px;
    }
    .service-title-container h1 {
      font-size: 80px;
    }
  }

  @media (max-width: 1023px) {
    .service-image--desktop {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .service-image--tablet {
      display: none;
    }
    /* Financing Circle */
    .financing-container {
      margin-top: 16px;
      width: 307px;
      height: 307px;
    }

    .financing-circle {
      width: 267px;
      height: 267px;
    }

    .financing-inner-circle {
      width: 170px;
      height: 170px;
    }
    .financing-text {
      font-size: 22px;
    }
  }

  /* Specific Subsection Adjustments */
  .service-subsection--bathrooms {
    margin-top: 86px;
  }

  .service-subsection--bathrooms .service-subsection-content {
    flex-direction: row-reverse;
  }

  .service-subsection--cabinetry .service-mobile-image {
    margin-top: 100px;
    margin-bottom: 56px;
  }
</style>

<section class="service-section">
  <!-- Title -->
  <div class="service-title-container">
    <h1>{{ section.settings.title_first | escape }}
      <span>{{ section.settings.title_second | escape }}</span>
    </h1>
  </div>

  <!-- Subsections -->
  {% for block in section.blocks %}
    <div class="service-subsection service-subsection--{{ block.settings.title | handleize }}">
      <!-- Mobile Image -->
      <div class="service-mobile-image">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | img_url: 'master' }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy">
        {% else %}
          <img
            src="https://via.placeholder.com/300"
            alt="Placeholder"
            loading="lazy">
        {% endif %}
      </div>

      <div class="service-subsection-container">
        <div class="service-subsection-content">
          <!-- Tablet Image -->
          <div class="service-image service-image--tablet">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy">
            {% else %}
              <img
                src="https://via.placeholder.com/481"
                alt="Placeholder"
                loading="lazy">
            {% endif %}
          </div>

          <!-- Desktop Image -->
          <div class="service-image service-image--desktop">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy">
            {% else %}
              <img
                src="https://via.placeholder.com/481"
                alt="Placeholder"
                loading="lazy">
            {% endif %}
          </div>

          <!-- Text Content -->
          <div class="service-text">
            <div class="service-text-inner">
              <div class="service-number">{{ block.settings.number | escape }}</div>
              <div>
                <div class="service-subtitle">{{ block.settings.title | escape }}</div>
                <div class="service-description">{{ block.settings.description | escape }}</div>
                <a href="{{ block.settings.button_url | escape }}" class="view-more">
                  <button class="view-more-btn">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                  </button>
                  <p class="view-more-text">{{ block.settings.button_text | escape }}</p>
                </a>
              </div>
            </div>
            {% if block.settings.show_financing %}
              <div class="flex justify-end w-full">
                <div class="financing-container">
                  <div class="financing-circle">
                    <div class="financing-inner-circle">
                      <div class="financing-text">{{ block.settings.financing_text | escape }}</div>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
  {
    "name": "Our Service",
    "settings": [
      {
        "type": "text",
        "id": "title_first",
        "label": "First Title Part",
        "default": "Our",
        "info": "The first part of the title (e.g., 'Our')."
      },
      {
        "type": "text",
        "id": "title_second",
        "label": "Second Title Part",
        "default": "Service",
        "info": "The second part of the title (e.g., 'Service')."
      },
      {
        "type": "color",
        "id": "second_color",
        "label": "Second Title Color",
        "default": "#6CA082",
        "info": "Color for the second title and accents."
      },
      {
        "type": "range",
        "id": "font_size_mobile",
        "label": "Font Size (Mobile)",
        "min": 20,
        "max": 80,
        "step": 1,
        "unit": "px",
        "default": 52,
        "info": "Font size for mobile screens."
      }, {
        "type": "range",
        "id": "font_size_desktop",
        "label": "Font Size (Desktop)",
        "min": 20,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 80,
        "info": "Font size for desktop screens."
      }, {
        "type": "range",
