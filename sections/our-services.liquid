          }, {
            "type": "checkbox",
            "id": "show_financing",
            "label": "Show Financing Circle",
            "default": false,
            "info": "Show the financing circle for this item."
          }, {
            "type": "textarea",
            "id": "financing_text",
            "label": "Financing Text",
            "default": "Need Financing?\nNo Problem.",
            "info": "Text for the financing circle. Use \\n for line breaks."
          }
        ]
      }
    ],
    "presets": [
